package study02;

import java.util.Scanner;

public class Bank {
	 public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
		 
		 while(true) {
			 System.out.println("\n1. 입금 | 2. 출금 | 3. 잔액 조회 | 4. 종료");
	         System.out.print("선택: ");
	         int choice = sc.nextInt();
	         
	         if(choice == 4) {
	        	 System.out.println("프로그램을 종료합니다.");
	        	 break;
	         }
		 }
	 }
}

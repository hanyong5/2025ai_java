package study03;

public class Hero {
	private String name;
	String power;
	int attack;
	int defense;
	String rank;
	
	public Hero(String name, String power, int attack, int defense) {
		this.name = name;
		this.power = power;
		this.attack = attack;
		this.defense = defense;
		this.rank = calcRank();
	}


	private String calcRank() {
		int score = attack + defense;
		if(score >= 180) {
			return "S";
		}else if(score >=140) {
			return "A";
		}else if(score >= 100) {
			return "B";
		}else {
			return "C";
		}

	}
	
	public void showHeroInfo() {
		
		System.out.println(" íˆì–´ë¡œ :"+ name);
		System.out.println(" ëŠ¥ë ¥ :"+ power);
		System.out.println(" ê³µê²©ë ¥ :"+ attack);
		System.out.println(" ë°©ì–´ë ¥ :"+ defense);
		System.out.println(" ë“±ê¸‰ :"+ rank);

	}
	@Override
	public String toString() {
		return "Hero [ğŸ±â€ğŸš€name=" + name + ", ğŸ‘power=" + power + ", attack=" + attack + ", defense=" + defense + ", rank="
				+ rank + "]";
	}



	
	
	


	
}

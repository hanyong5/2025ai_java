package study02;

import java.util.Scanner;

public class Bank {
	 public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
		 
		 System.out.println("\n1. 한성용 | 2. 홍길동 | 3. 이순신 | 5. 선택메뉴 | 6. 프로그램닫기");
         
		 
		 while(true) {
			 System.out.print("- 캐릭터를 선택하세요: ");
	         int choice = sc.nextInt();
	         
	         switch (choice) {
             case 1:
                 System.out.print("한성용을 선택하셨습니다. ");
                 
                 break;
             case 2:
                 System.out.print("홍길동을 선택하셨습니다. ");
                 
                 break;
             case 3:
            	 System.out.print("이순신을 선택하셨습니다. ");
                 break;
             case 4:
                 System.out.println("프로그램을 종료합니다.");
                 return;
             default:
                 System.out.println("잘못된 입력입니다. 다시 선택해주세요.");
         }
	         
	         
//	         if(choice == 4) {
//	        	 System.out.println("프로그램을 종료합니다.");
//	        	 break;
//	         }
		 }
	 }
}
